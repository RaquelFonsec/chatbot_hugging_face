<!-- Importa Bootstrap -->
<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", crossorigin: "anonymous" %>
<%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js", crossorigin: "anonymous" %>

<!-- Adicionando um fundo e espa√ßamento -->
<div class="container mt-5" style="background-color: #f0f8ff; border-radius: 15px; padding: 20px;">
  <h1 class="text-center mb-4" style="color: #4a90e2;">ü§ñ Chat com IA</h1>

  <%= form_with url: messages_path, method: :post, local: true, id: "message-form" do %>
    <div class="mb-3">
      <label for="content" class="form-label">Digite sua pergunta:</label>
      <%= text_area_tag :content, nil, rows: 3, class: "form-control", placeholder: "Ex: Qual a capital da Fran√ßa?" %>
    </div>

    <div class="text-center">
      <%= submit_tag "‚úâÔ∏è Enviar", class: "btn btn-primary btn-md px-4" %>
    </div>
  <% end %>

  <div id="loading" class="text-center my-3" style="display: none;">
    <div class="spinner-border text-primary" role="status">
      <span class="visually-hidden">Carregando...</span>
    </div>
    <p class="mt-2">Carregando resposta...</p>
  </div>

  <hr>

  <% if flash[:error] %>
    <div class="alert alert-danger" role="alert" style="background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; border-radius: 10px; padding: 15px; margin-bottom: 20px;">
      ‚ö†Ô∏è <strong>Erro:</strong> <%= flash[:error] %>
    </div>
  <% end %>

  <h2 class="mb-3" style="color: #4a90e2;">Hist√≥rico</h2>

  <% @messages.each_slice(2) do |user_msg, ai_msg| %>
    <div class="card mb-3 shadow-sm" style="border-radius: 15px; border: none; background-color: #fff; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
      <div class="card-body">
        <% if user_msg %>
          <p><strong>üë§ Voc√™:</strong> <%= user_msg.content %></p>
        <% end %>

        <% if ai_msg %>
          <% if ai_msg.content.blank? %>
            <p class="text-warning"><strong>ü§ñ IA:</strong> Desculpe, houve um problema e n√£o consegui gerar uma resposta. Tente novamente em breve.</p>
          <% elsif ai_msg.content.include?("Erro: Limite de cr√©ditos excedido") %>
            <p class="text-danger"><strong>ü§ñ IA:</strong> Limite de cr√©ditos excedido. Tente novamente mais tarde ou assine um plano PRO.</p>
          <% elsif ai_msg.content.include?("Erro: Servi√ßo temporariamente indispon√≠vel") %>
            <p class="text-danger"><strong>ü§ñ IA:</strong> Servi√ßo temporariamente indispon√≠vel. Tente novamente mais tarde.</p>
          <% else %>
            <p><strong>ü§ñ IA:</strong> <%= ai_msg.content %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Estilos Adicionais -->
<style>
  body {
    background-color: #e6f7ff; /* fundo de p√°gina suave */
    font-family: 'Arial', sans-serif;
  }

  .container {
    background-color: #fff;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
  }

  .btn-primary {
    background-color: #4a90e2;
    border-color: #4a90e2;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    background-color: #357ABD;
    border-color: #357ABD;
  }

  .card {
    background-color: #f9f9f9;
    border-radius: 10px;
  }

  h1, h2 {
    color: #4a90e2;
  }

  .form-control {
    border-radius: 8px;
    box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.1);
  }

  .spinner-border {
    border-top-color: #4a90e2;
  }

  .card-body {
    font-size: 1.1rem;
  }
</style>

<!-- JavaScript para mostrar loading -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("message-form");
    const loading = document.getElementById("loading");

    form.addEventListener("submit", function () {
      loading.style.display = "block";
    });
  });
</script>
